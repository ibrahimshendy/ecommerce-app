<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Categories</h5>
        <div class="text-end">
          <%= link_to "Create", new_admin_category_path, class: 'btn btn-sm btn-success' %>
        </div>
      </div>
      <div class="card-body">
        <table class="table table-hover">
          <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Status</th>
            <th scope="col">Created at</th>
            <th scope="col">Actions</th>
          </tr>
          </thead>
          <tbody>
            <% @categories.each do | category | %>
              <tr>
                <td><%= category.id %></td>
                <td><%= category.name %></td>
                <td><%= category.description %></td>
                <td><%= category.status %></td>
                <td><%= category.created_at %></td>
                <td>
                  <%= link_to "Edit", edit_admin_category_path(category.id), class: "btn btn-info btn-sm" %>
                  <%= link_to "Show", admin_category_path(category.id), class: "btn btn-success btn-sm" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer">
        <!-- pagination links -->
      </div>
    </div>
  </div>
</div>